{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cafe-chi-admin-panel-front/api": ["libs/api/index.ts"],
      "@cafe-chi-admin-panel-front/dto": ["libs/api/dto/src/index.ts"],
      "@cafe-chi-admin-panel-front/implementation": [
        "libs/api/src/implementation/index.ts"
      ],
      "@cafe-chi-admin-panel-front/mapper": [
        "libs/api/src/mapper/index.ts"
      ],
      "@cafe-chi-admin-panel-front/misc": ["libs/api/src/misc/src/index.ts"],
      "@cafe-chi-admin-panel-front/state": [
        "libs/state-management/state/src/index.ts"
      ],
      "@cafe-chi-admin-panel-front/state-management": [
        "libs/state-management/index.ts"
      ],
      "@cafe-chi-admin-panel-front/store": [
        "libs/state-management/store/src/index.ts"
      ],
      "@cafe-chi-owner-panel-front/cl-table": [
        "libs/view/cl-table/src/index.ts"
      ],
      "@cafe-chi-owner-panel-front/libs": ["libs/index.ts"],
      "@cafe-chi-owner-panel-front/view": ["libs/view/index.ts"],
      "@view/lib": ["libs/view/src/index.ts"],
      "@view/lib/*": ["libs/view/src/*/index.ts"],
      "dashboard/Routes": [
        "apps/dashboard/src/app/remote-entry/entry.routes.ts"
      ],
      "payments/Routes": ["apps/payments/src/app/remote-entry/entry.routes.ts"],
      "reports/Routes": ["apps/reports/src/app/remote-entry/entry.routes.ts"],
      "security/Routes": ["apps/security/src/app/remote-entry/entry.routes.ts"],
      "user_management/Routes": [
        "apps/user_management/src/app/remote-entry/entry.routes.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
